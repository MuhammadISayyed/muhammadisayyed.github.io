---
import Layout from './Layout.astro'
const { frontmatter } = Astro.props
const title = frontmatter.title
const description = frontmatter.description
const pubDate = frontmatter.pubDate
---

<Layout title={title} description={description} pubDate={pubDate}>
  <div class="content-container">
    <h1 class="article-title">{title}</h1>
    <span class="published-at">{pubDate}</span>
    <main class="article-container">
      <slot />
    </main>
  </div>
</Layout>

<style is:inline>
  .content-container {
    display: flex;
    flex-direction: column;

    & a {
      color: var(--color-primary-main);
      text-decoration: underline 2px var(--color-primary-main);
      text-underline-offset: 0.4em;

      &:hover {
        color: var(--color-dark-main);
        text-decoration-color: var(--color-dark-main);
        transition: all 0.2s ease-in;
      }
    }
  }

  .article-title {
    margin-block: 3rem;
    font-size: 3rem;
    color: var(--color-primary-main);
    max-width: 20ch;
    line-height: 1.1;
  }

  h2,
  h3,
  h4,
  h5,
  h6 {
    margin-block-start: 2rem;
    color: var(--color-primary-main);
  }

  p {
    font-size: 1.2rem;
    margin-block: 0.8rem;
    &:last-child {
      margin-bottom: 3rem;
    }
  }

  img {
    max-width: 100%;
    height: min-content;
  }

  .article-container {
    margin-block-start: 2.5rem;
    margin-block-end: 1rem;
  }

  .published-at {
    font-weight: 200;
  }

  @media (max-width: 767px) {
    .content-container {
      width: 80%;
    }
  }
</style>
