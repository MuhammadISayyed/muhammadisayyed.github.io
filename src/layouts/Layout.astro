---
// This is for typescript
interface Props {
  title: string
  description: string
  pubDate?: Date
}

const { title, description } = Astro.props
import Nav from '../components/Nav.astro'
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Harmattan:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="container">
      <Nav />
      <slot />
    </div>
  </body>
</html>

<style is:global>
  /* Box sizing rules */
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  /* Remove default margin */
  body,
  h1,
  h2,
  h3,
  h4,
  p,
  figure,
  blockquote,
  dl,
  dd {
    margin: 0;
    font-size: 1.2rem;
  }

  a:hover {
    color: var(--color-primary-main);
    transition: all 0.2s ease-in;
  }

  /* Remove list styles on ul, ol elements with a list role, which suggests default styling will be removed */
  ul[role='list'],
  ol[role='list'] {
    list-style: none;
  }

  /* Set core root defaults */
  html:focus-within {
    scroll-behavior: smooth;
  }

  /* Set core body defaults */
  body {
    min-height: 100vh;
    text-rendering: optimizeSpeed;
    line-height: 1.7;
  }

  /* A elements that don't have a class get default styles */
  a:not([class]) {
    text-decoration-skip-ink: auto;
  }

  /* Make images easier to work with */
  img,
  picture {
    max-width: 100%;
    display: block;
  }

  /* Inherit fonts for inputs and buttons */
  input,
  button,
  textarea,
  select {
    font: inherit;
  }

  p::selection {
    background-color: var(--color-primary-main);
  }

  /* Remove all animations, transitions and smooth scroll for people that prefer not to see them */
  @media (prefers-reduced-motion: reduce) {
    html:focus-within {
      scroll-behavior: auto;
    }

    *,
    *::before,
    *::after {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
      scroll-behavior: auto !important;
    }
  }

  /* Andy Bell's css reset ends here */

  :root {
    --color-primary-main: hsl(194, 92%, 53%);
    --color-dark-main: hsl(354, 11%, 18%);
    --color-dark-neutral: hsl(354, 11%, 27%);
  }

  a {
    text-decoration: none;
    color: var(--color-text-main);
  }

  body {
    font-family: 'Gambetta', serif;
    color: var(--color-text-main);
  }

  p {
    font-size: 1.1rem;
    max-width: 55ch;
  }

  /**
* This is a variable font
* You can control variable axes as shown below:
* font-variation-settings: wght 300.0wght 700.0;
*
* available axes:
'wght' (range from 300.0 to 700.0'wght' (range from 300.0 to 700.0
*/
@font-face {
  font-family: 'Gambetta-Variable';
  src: url('../../public/fonts/gambetta/Gambetta-Variable.woff2') format('woff2'),
       url('../../public/fonts/gambetta/Gambetta-Variable.woff') format('woff'),
       url('../../public/fonts/gambetta/Gambetta-Variable.ttf') format('truetype');
  font-weight: 300 700;
  font-display: swap;
  font-style: normal;
}
/**
* This is a variable font
* You can control variable axes as shown below:
* font-variation-settings: wght 300.0wght 700.0;
*
* available axes:
'wght' (range from 300.0 to 700.0'wght' (range from 300.0 to 700.0
*/
@font-face {
  font-family: 'Gambetta-VariableItalic';
  src: url('../../public/fonts/gambetta/Gambetta-VariableItalic.woff2') format('woff2'),
       url('../../public/fonts/gambetta/Gambetta-VariableItalic.woff') format('woff'),
       url('../../public/fonts/gambetta/Gambetta-VariableItalic.ttf') format('truetype');
  font-weight: 300 700;
  font-display: swap;
  font-style: italic;
}


  /* Register your custom font family and tell the browser where to find it.
  @font-face {
